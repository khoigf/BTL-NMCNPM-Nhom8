<!doctype html>
<html lang="en">
    <head>
        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <!-- Bootstrap CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

        <title>Login</title>
    </head>
    <body  >
        <div class="container">
            <h1 class=" mt-3 mb-3 text-center text-success"><b>Welcome to Airlines Online Ticket Reservation System </b></h1>
            <h3 class=" mb-3 mt-3 text-center text-primary"><b>Login to Continue</b></h1>
          <div class = "row">
            
            <div class = "col-sm-3">

            </div>
           <div class = "col-sm-6 mb-3 mt-3 float-end">  
            <div class="card >
                <div class="card-header">
                    <% if(message.success) { %>
                        <div class="alert alert-success">
                            <%= message.success %>
                        </div>
                        <% } %>
                    
                        <% if(message.fail) { %>
                            <div class="alert alert-danger">
                                <%= message.fail %>
                            </div>
                            <% } %>
                </div>
                <div class="card-body">
                    <form method="post" action="/project/login">
                        <div class="mb-3">
                            <label>Username</label>
                            <input type="text" name="user_name" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label>Password</label>
                            <input type="password" name="user_password" class="form-control" />
                        </div>
                        
                            <div class="mb-3">
                                    <input type="submit" class="btn btn-primary" value="User Login" />
                                    <a href = "/project/register" class = "btn btn-primary">New User? Sign Up</a>
                            </div>
                            <div class = "mb-4">
                                <a href = "/project/admin_cred" class = "btn btn-primary">Login as Admin</a>
                            </div>
                    </form>
                </div>
            </div>
           </div>
           <div class = "col-sm-3">

           </div>
          </div> 
        </div>
    </body>
</html>

