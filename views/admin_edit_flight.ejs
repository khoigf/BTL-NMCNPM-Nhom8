<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-w6Pki3I2GzGX1fNfUZEFvqivxBof10j9DFOON92kFoE77p1az0F+O5lBR+QDE3dF" crossorigin="anonymous">
    <link rel='stylesheet' href='/stylesheets/styleUser.css' />
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Arial', sans-serif;
            padding: 0;
        }

        h1 {
            color: white;
        }

        h2 {
            color: #007bff;
        }

        #sidebar {
            width: 250px;
            background-color: #343a40;
            color: #ffffff;
            padding: 20px;
        }

        table {
            width: 100%;
            background-color: white;
            margin-top: 20px;
            border-collapse: collapse;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        }

        th,
        td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #dee2e6;
        }

        tbody tr:hover {
            background-color: #f5f5f5;
        }

        .btn-login {
            background-color: #007bff;
            color: #ffffff;
        }

        .btn-login:hover {
            background-color: #0069d9;
            color: #ffffff;
        }
    </style>
    <title>Flight Editor - Admin Page</title>
</head>

<body>
    <div class="container mt-4">
        <h1>Danh sách chuyến bay</h1>

        <table class="table mt-4">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Số hiệu chuyến bay</th>
                    <th>Loại</th>
                    <th>Ngày</th>
                    <th>Từ</th>
                    <th>Đến</th>
                    <th>Thời gian đi</th>
                    <th>Thời gian đến</th>
                    <th>Giá</th>
                    <th>Chỗ còn</th>
                    <th></th>
                    <th></th>
                    <!-- Add more columns as needed -->
                </tr>
            </thead>
            <tbody>
                <% for (let flight of flights) { %>
                    <tr>
                        <td>
                            <%= flight.f_id %>
                        </td>
                        <td>
                            <%= flight.f_number %>
                        </td>
                        <td>
                            <%= flight.f_type %>
                        </td>
                        <td>
                            <%= flight.f_date %>
                        </td>
                        <td>
                            <%= flight.f_source %>
                        </td>
                        <td>
                            <%= flight.f_dest %>
                        </td>
                        <td>
                            <%= flight.f_dept_time %>
                        </td>
                        <td>
                            <%= flight.f_arr_time %>
                        </td>
                        <td>
                            <%= flight.f_fare %>
                        </td>
                        <td>
                            <%= flight.f_remseats %>
                        </td>
                        <td>
                            <button class="btn btn-primary"
                                onclick="window.location.href='/project/admin_login/edit_flight/<%= flight.f_id %>'">Cập
                                nhật
                            </button>
                        </td>
                        <td>
                            <form action="/project/admin_login/deleteflight/<%= flight.f_id %>" method="post">
                                <button type="submit" class="btn btn-primary" style="background-color: #ea2806;">Xóa
                                    CBay</button>
                            </form>
                        </td>
                        <!-- Add more columns as needed -->
                    </tr>
                    <% } %>
            </tbody>
        </table>

        <!-- Add Flight Form -->
        <div class="mt-4">
            <h1>Thêm chuyến bay</h1>
            <button class="btn btn-primary" onclick="window.location.href='/project/admin_login/add_flight'">Thêm chuyến
                bay</button>
        </div>


    </div>
</body>

</html>