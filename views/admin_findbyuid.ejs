<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel='stylesheet' href='/stylesheets/styleUser.css' />
    <style>
        body {
            background-image: url("/image/91.jpg");
            background-size: cover;
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-position: center;
            font-family: 'Arial', sans-serif;
            padding: 0;
        }

        h1 {
            color: rgb(255, 255, 255);
        }

        h2 {
            color: #007bff;
        }

        #sidebar {
            width: 250px;
            background-color: #343a40;
            color: #ffffff;
            padding: 20px;
        }

        table {
            width: 100%;
            background-color: white;
            margin-top: 20px;
            border-collapse: collapse;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        }

        th,
        td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #dee2e6;
        }

        tbody tr:hover {
            background-color: #f5f5f5;
        }

        .btn-update {
            background-color: #007bff;
            color: #ffffff;
            transition: background-color 0.3s ease;
        }

        .btn-update:hover {
            background-color: #0056b3;
            color: #ffffff;
        }

        .btn-delete {
            background-color: #ea2806;
            color: #ffffff;
            transition: background-color 0.3s ease;
        }

        .btn-delete:hover {
            background-color: #c82200;
            color: #ffffff;
        }

        .center-container {
            display: flex;
            align-items: center;
            justify-content: center;
            height: 90vh;
        }

        .card {
            background-color: #2422226f;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 750px;
            text-align: center;
        }

        .card-body {
            padding: 20px;
            color: rgba(255, 255, 255);
        }
    </style>
    <title>Ticket of UID</title>
</head>

<body>
    <div class="container mt-4">
        <% if(tickets.length>= 1) { %>
            <h1>Danh sách vé của UID: <%= tickets[0].b_user_id %>
            </h1>
            <table class="table mt-4">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>ID người dùng</th>
                        <th>Số hiệu chuyến bay</th>
                        <th>Loại</th>
                        <th>Ngày</th>
                        <th>Tên</th>
                        <th>Tuổi</th>
                        <th>Giới tính</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <% for (let ticket of tickets) { %>
                        <tr>
                            <td>
                                <%= ticket.b_id %>
                            </td>
                            <td>
                                <%= ticket.b_user_id %>
                            </td>
                            <td>
                                <%= ticket.b_f_number %>
                            </td>
                            <td>
                                <%= ticket.b_f_type %>
                            </td>
                            <td>
                                <%= ticket.b_f_date %>
                            </td>
                            <td>
                                <%= ticket.b_pas_name %>
                            </td>
                            <td>
                                <%= ticket.b_pas_age %>
                            </td>
                            <td>
                                <%= ticket.b_pas_gender %>
                            </td>
                            <td>
                                <button class="btn btn-update"
                                    onclick="window.location.href='/project/admin_login/edit_ticket/<%= ticket.b_id %>'">
                                    Cập nhật
                                </button>
                            </td>
                            <td>
                                <form action="/project/admin_login/deleteticket/<%= ticket.b_id %>" method="post">
                                    <button type="submit" class="btn btn-delete">Xóa Vé</button>
                                </form>
                            </td>
                        </tr>
                        <% } %>
                </tbody>
            </table>
            <button onclick="goBack()" class="btn btn-secondary mt-3">Quay lại</button>
            <% } else { %>
                <div class="center-container">
                    <div class="card">
                        <div class="card-body">
                            <h1>Không có vé</h1>
                            <button onclick="goBack()" class="btn btn-secondary">Quay lại</button>
                        </div>
                    </div>
                </div>
                <% } %>
    </div>
    <script>
        function goBack() {
            window.history.back();
        }
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
</body>

</html>